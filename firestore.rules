rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() { return request.auth != null; }
    function isManagement() { return request.auth.token.email.matches('.*admin.*'); } // Fallback if roles fail

    match /users/{userId} {
      allow read, write, list: if isAuthenticated();
    }
    
    match /vsds/{vsdId} {
      allow read, write, list: if isAuthenticated();
    }
    
    match /completed_schedules/{scheduleId} {
      allow read, write, list: if isAuthenticated();
    }
    
    match /upcoming_schedules/{scheduleId} {
      allow read, write, list: if isAuthenticated();
    }
    
    match /equipment/{equipmentId} {
      allow read, write, list: if isAuthenticated();
      
      match /performance_records/{recordId} {
        allow read, write, list: if isAuthenticated();
      }
    }

    match /breakdown_reports/{breakdownReportId} {
      allow read, write, list: if isAuthenticated();
    }
    
    match /daily_diaries/{diaryId} {
      allow read, write, list: if isAuthenticated();
    }

    match /generated_reports/{reportId} {
      allow read, write, list: if isAuthenticated();
    }

    match /tasks/{taskId} {
      allow read, write, list: if isAuthenticated();
    }

    match /timesheets/{timesheetId} {
      allow read, write, list: if isAuthenticated();
    }
  }
}
