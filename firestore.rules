rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() { return request.auth != null; }
    function isManagement() { return request.auth.token.email.matches('.*admin.*'); } // Fallback if roles fail

    match /users/{userId} { allow read, write: if isAuthenticated(); }
    
    match /vsds/{vsdId} { allow read, write: if isAuthenticated(); }
    match /completed_schedules/{scheduleId} { allow read, write: if isAuthenticated(); }
    match /upcoming_schedules/{scheduleId} { allow read, write: if isAuthenticated(); }
    
    // Allow access to Equipment for all logged-in users
    match /equipment/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow access to Breakdown Reports for all logged-in users
    match /breakdown_reports/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // DAILY DIARIES - FIXED FOR SAVING
    match /daily_diaries/{diaryId} {
      allow read, list: if isAuthenticated();
      allow create: if isAuthenticated(); 
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /generated_reports/{reportId} {
      allow read, write, list: if isAuthenticated();
    }
  }
}
