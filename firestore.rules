
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isRegisteredUser() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    // Function to get the user's role from the users collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Rules for the users collection
    match /users/{userId} {
      // Allow any authenticated user to list users, which is needed for dropdowns.
      // The fields they can read are still controlled by the 'get' rule.
      allow list: if isRegisteredUser();
      // Allow users to read their own document
      allow get: if isRegisteredUser() && request.auth.uid == userId;
      // Allow supervisors and above to read all user documents
      allow read: if isRegisteredUser() && getUserRole(request.auth.uid) in ['Site Supervisor', 'Services Manager', 'Corporate Manager', 'Admin'];
      // Allow a user to create their own user document
      allow create: if request.auth.uid == userId;
      // Only Admins can update or delete users
      allow update, delete: if isRegisteredUser() && getUserRole(request.auth.uid) == 'Admin';
    }
    
    // Other collections can be read by any registered user
    match /equipment/{equipmentId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser(); // More specific rules can be added here
    }

    match /vsds/{vsdId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser();
    }
    
    match /tasks/{taskId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser();
    }
    
    match /breakdown_reports/{reportId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser();
    }
    
    match /completed_schedules/{scheduleId} {
      allow read, write: if isRegisteredUser();
    }

    // Fallback for any other path, deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
