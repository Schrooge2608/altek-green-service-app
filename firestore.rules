rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TEMPORARY RULE FOR DEBUGGING
    // This allows any authenticated user to read and write to the entire database.
    // This will be replaced with secure rules once functionality is confirmed.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
