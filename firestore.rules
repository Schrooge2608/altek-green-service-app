
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isRegisteredUser() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isSupervisorOrAdmin() {
        let userRole = getUserRole(request.auth.uid);
        return userRole in ['Site Supervisor', 'Services Manager', 'Corporate Manager', 'Admin', 'Superadmin', 'Data Admin'];
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the users collection
    match /users/{userId} {
      allow read: if isRegisteredUser();
      allow create: if isOwner(userId);
      
      allow update: if isRegisteredUser() && (
        isSupervisorOrAdmin() ||
        (
          isOwner(userId) &&
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['phoneNumber', 'address', 'nextOfKinName', 'nextOfKinPhone'])
        )
      );
      
      allow delete: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    // Other collections can be read by any registered user
    match /equipment/{equipmentId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    match /vsds/{vsdId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    match /tasks/{taskId} {
      allow read: if isRegisteredUser();
      // Allow supervisors and admins to create or update tasks
      allow create, update: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    match /breakdown_reports/{reportId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser();
    }
    
    match /completed_schedules/{scheduleId} {
      allow read, write: if isRegisteredUser();
    }

    // Fallback for any other path, deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
