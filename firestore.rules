rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, and admins can read any profile.
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin']);
    }

    // Any authenticated user can read equipment data. Writes are restricted.
    match /equipment/{equipmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin', 'Technician', 'Site Supervisor'];
    }

    // Any authenticated user can read VSD data. Writes are restricted.
    match /vsds/{vsdId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin', 'Technician', 'Site Supervisor'];
    }

    // Any authenticated user can read breakdown reports.
    match /breakdown_reports/{reportId} {
      allow read, write: if request.auth != null;
    }
    
    // Authenticated users can manage their own tasks.
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }

    // Completed schedules can be read by anyone, but only created/updated by specific roles.
    match /completed_schedules/{scheduleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin', 'Technician', 'Site Supervisor'];
    }
    
    // Timesheets can only be accessed by their owner or an admin.
    match /timesheets/{timesheetId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin']);
    }
    
    // Performance records are tied to equipment permissions.
    match /equipment/{equipmentId}/performance_records/{recordId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin', 'Technician', 'Site Supervisor'];
    }

    // DAILY DIARIES: The source of the issue.
    match /daily_diaries/{diaryId} {
      // Allow any logged-in user to see the list of all diaries.
      allow list, read: if request.auth != null;
      
      // Allow a user to create a new diary, but only if they set themselves as the owner.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to update or delete a diary, but only if they are the original owner.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}