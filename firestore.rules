
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isRegisteredUser() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isSupervisorOrAdmin() {
        let userRole = getUserRole(request.auth.uid);
        return userRole in ['Site Supervisor', 'Services Manager', 'Corporate Manager', 'Admin', 'Superadmin', 'Data Admin'];
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the users collection
    match /users/{userId} {
      allow read: if isRegisteredUser();
      allow create: if isOwner(userId);
      
      allow update: if isRegisteredUser() && (
        isSupervisorOrAdmin() ||
        (
          isOwner(userId) &&
          request.resource.data.keys().hasOnly(['phoneNumber', 'address', 'nextOfKinName', 'nextOfKinPhone', 'name', 'email', 'role', 'sapNumber', 'qualifications', 'designatedLeaderName', 'responsibleGenManager', 'department', 'section', 'purchaseOrderNo', 'startingDate', 'endDate', 'justification', 'id']) &&
          request.resource.data.name == resource.data.name &&
          request.resource.data.email == resource.data.email &&
          request.resource.data.role == resource.data.role &&
          request.resource.data.sapNumber == resource.data.sapNumber &&
          request.resource.data.qualifications == resource.data.qualifications &&
          request.resource.data.designatedLeaderName == resource.data.designatedLeaderName &&
          request.resource.data.responsibleGenManager == resource.data.responsibleGenManager &&
          request.resource.data.department == resource.data.department &&
          request.resource.data.section == resource.data.section &&
          request.resource.data.purchaseOrderNo == resource.data.purchaseOrderNo &&
          request.resource.data.startingDate == resource.data.startingDate &&
          request.resource.data.endDate == resource.data.endDate &&
          request.resource.data.justification == resource.data.justification
        )
      );
      
      allow delete: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    // Other collections can be read by any registered user
    match /equipment/{equipmentId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    match /vsds/{vsdId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    match /tasks/{taskId} {
      allow read: if isRegisteredUser();
      // Allow supervisors and admins to create or update tasks
      allow create, update: if isRegisteredUser() && isSupervisorOrAdmin();
    }
    
    match /breakdown_reports/{reportId} {
      allow read: if isRegisteredUser();
      allow write: if isRegisteredUser();
    }
    
    match /completed_schedules/{scheduleId} {
      allow read, write: if isRegisteredUser();
    }

    // Fallback for any other path, deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
