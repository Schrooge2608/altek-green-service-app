
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // VSDs Collection
    match /vsds/{vsdId} {
      allow read, write: if isAuthenticated();
    }

    // Equipment Collection
    match /equipment/{equipmentId} {
      allow read, write: if isAuthenticated();
    }
    match /equipment/{equipmentId}/performance_records/{recordId} {
      allow read, write: if isAuthenticated();
    }

    // Tasks Collection
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // BreakdownReports Collection
    match /breakdown_reports/{breakdownReportId} {
      allow read, write: if isAuthenticated();
    }

    // CompletedSchedules Collection
    match /completed_schedules/{scheduleId} {
      allow read, write: if isAuthenticated();
    }

    // Users Collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth.uid == userId;
      // Admins can read and write any user profile
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Superadmin'];
    }
     match /users {
        allow list: if isAuthenticated();
     }


    // DailyDiaries Collection
    match /daily_diaries/{diaryId} {
      // Users can create and manage their own diary entries.
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }
     match /daily_diaries {
        // Users can only list documents where their uid matches the userId field.
        allow list: if request.auth != null && request.query.where['userId'] == request.auth.uid;
    }
    
    // Timesheets Collection (user-specific access)
    match /timesheets/{timesheetId} {
      // Allow read/write if the user's UID matches the first part of the document ID.
      allow read, write: if request.auth != null && timesheetId.split('_')[0] == request.auth.uid;
    }
     match /timesheets {
        allow list: if false; // Disallow broad collection queries for security.
    }
  }
}
